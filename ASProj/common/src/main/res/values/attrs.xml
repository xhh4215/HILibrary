<?xml version="1.0" encoding="utf-8"?><!--该文件用来定义自定义View的属性的-->
<resources>
    <!--    自定义输入控件的自定义属性-->
    <declare-styleable name="InputItemLayout">
        <attr name="hint" format="string" />
        <attr name="title" format="string" />
        <attr name="inputType" format="enum">
            <enum name="text" value="0"></enum>
            <enum name="password" value="1"></enum>
            <enum name="number" value="2"></enum>
        </attr>
        <attr name="inputTextAppearance" format="reference"></attr>
        <attr name="titleTextAppearance" format="reference"></attr>
        <attr name="topLineTextAppearance" format="reference"></attr>
        <attr name="bottomLineTextAppearance" format="reference"></attr>

    </declare-styleable>
    <!--    输入框文本的自定义的属性-->
    <declare-styleable name="inputTextAppearance">
        <attr name="hintColor" format="color"></attr>
        <attr name="inputColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>
    </declare-styleable>
    <!--     输入框标题的自定义属性-->
    <declare-styleable name="titleTextAppearance">
        <attr name="titleColor" format="color"></attr>
        <attr name="titleSize" format="dimension"></attr>
        <attr name="minWidth" format="dimension"></attr>
    </declare-styleable>
    <!--    输入自定义控件的分割线属性-->
    <declare-styleable name="lineAppearance">
        <attr name="color" format="color"></attr>
        <attr name="height" format="dimension"></attr>
        <attr name="leftMargin" format="dimension"></attr>
        <attr name="rightMargin" format="dimension"></attr>
        <attr name="enable" format="boolean"></attr>
    </declare-styleable>


</resources>